<div class="row d-flex justify-content-center">
    <h1 class="my-4 text-white text-center">Sign Up</h1>
    
    <div class="card form-card col-12 col-md-6 col-lg-4 col-xl-3 custom-shadow bg-dark">
        <%= form_with(model: @user, local: true, html: {class: "custom-form"}) do |form| %>
            <% if @user.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this user from signing up:</h2>
                    <ul>
                        <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <div class="field form-group mb-3 mt-3 text-white">
                <h3>Register Today</h3>
                <p>Fill in the data below.</p>
            </div>
            <div class="field form-group mb-3 mt-3">
                <%= form.label :name, style: "display: block", class: "text-white" %>
                <%= form.text_field :name, class: "form-control", :required => 'required' %>
            </div>

            <div class="field form-group mb-3">
                <%= form.label :email, style: "display: block", class: "text-white" %>
                <%= form.email_field :email, class: "form-control", :required => 'required' %>
            </div>

            <div class="field form-group mb-3">
                <%= form.label :password, style: "display: block", class: "text-white" %>
                <%= form.password_field :password, class: "form-control", :required => 'required' %>
            </div>

            <div class="form-group d-flex justify-content-center">
                <%= form.button :submit, class: "btn-submit m-1" do %>
                    <div class='row d-flex align-items-center' style='padding: 0px 7px'>
                        <div class='col-xs-12 col-sm-4 btn-icon'>
                            <i class='bi bi-person-add'></i>
                        </div>
                        <div class='col-xs-12 col-sm-8'>
                            Sign Up
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
</div>