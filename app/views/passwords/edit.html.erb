<div class="row d-flex justify-content-center">
    <div class="card form-card col-12 col-md-6 col-lg-4 col-xl-3 custom-shadow bg-dark">
        <%= form_with(model: @current_user, url: change_password_path, html: {class: "custom-form"}) do |form| %>
            <% if form.object.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(form.object.errors.count, 'error') %> prohibited this user from changing password:</h2>
                    <ul>
                        <% form.object.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <div class="field form-group mb-3 mt-3 text-white">
                <h3>Change your password</h3>
                <p>Fill in the data below.</p>
            </div>

            <div class="field form-group mb-3">
                <%= form.label :password, style: "display: block", class: "text-white" %>
                <%= form.password_field :password, class: "form-control", :required => 'required' %>
            </div>
            <div class="field form-group mb-3">
                <%= form.label :password_confirmation, style: "display: block", class: "text-white" %>
                <%= form.password_field :password_confirmation, class: "form-control", :required => 'required' %>
            </div>

            <div class="form-group d-flex justify-content-center">
                <%= form.button :submit, class: "btn-submit m-1" do %>
                    <div class='row d-flex align-items-center' style='padding: 0px 7px'>
                        <div class='col-xs-12 col-sm-4 btn-icon'>
                            <i class='bi bi-arrow-repeat'></i>
                        </div>
                        <div class='col-xs-12 col-sm-8'>
                            Update
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
</div>
<div class="row d-flex justify-content-center">
    <div class="col-12 col-md-6 col-lg-4 col-xl-3 d-flex justify-content-center">
        <%= link_to "Go back to user profile", user_profiles_path, class: "btn-spread m-1 my-4" %>
    </div>
</div>    