<div class="row d-flex justify-content-center text-center">
  <div class="col-12">
        <h1 class="my-4">Log In</h1>
        <%= form_with url: session_path do |f| %>
            <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email %>
            </div>

            <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password %>
            </div>

            <div class="actions">
                <%= f.submit 'Log In' %>
            </div>
        <% end %>
    </div>
</div>