<%= form_with(model: entry, html: { id: "entries-form" }) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group mb-3">
      <%= form.label :food_meal_type, 'Meal type:', style: "display: block" %>
      <%= form.select :food_meal_type, ['Breakfast', 'Lunch', 'Dinner', 'Snacks'], class: "form-control" %>
    </div>
    
    <div class="form-group mb-3">
      <%= form.label :food_name, 'Product name:', style: "display: block" %>
      <%= form.text_field :food_name, class: "form-control", readonly: (true if readonly == true) %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :food_quantity, 'Quantity (g/ml):', style: "display: block" %>
      <%= form.number_field :food_quantity, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :food_upc_code, 'Product code:', style: "display: block" %>
      <%= form.number_field :food_upc_code, class: "form-control", readonly: (true if readonly == true) %>
    </div>

    <%# Scanner displays only on routes that have @scannerHidden set to false %>
    <% if !@scannerHidden %>
      <div class="form-group mb-3 d-flex justify-content-center">
        <div class="form-group btn btn-dark text-center" id="barcode-scanner">Code Scanner</div>
      </div>
    <% end %>
    
    <div class="form-group mb-3 d-flex justify-content-center">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </form>
<% end %>
