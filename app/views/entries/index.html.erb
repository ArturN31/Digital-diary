<div class="row d-flex justify-content-center text-center">
  <div class="col-12">
    <%# if notice is not nil display notice %>
    <% if notice.nil? %>
    <% else %>
      <div class='notice'><%= notice %></div>
    <% end %>
    
    <h1 class="my-4">Entries</h1>
    <%= link_to "New entry", new_entry_path, class: "btn btn-primary mb-3" %>
  </div>

  <% @entries.each do |day, entries| %>
    <div class="text-center d-flex justify-content-center">
      <div>
        <h3 class="my-4">Entries for <%= day %> </h3>

        <h6>Todays intake:</h6>
        <ul class="list-group list-group-horizontal-sm mb-3">
          <li class="list-group-item">
              Calories: <%= entries.pluck(:food_calories).sum %>kcal
          </li>

          <li class="list-group-item">
              Protein: <%= entries.pluck(:food_protein).sum %>g
          </li>

          <li class="list-group-item">
              Carbohydrates: <%= entries.pluck(:food_carbohydrates).sum %>g
          </li>

          <li class="list-group-item">
              Fibre: <%= entries.pluck(:food_fibre).sum %>g
          </li>

          <li class="list-group-item">
              Fats: <%= entries.pluck(:food_fats).sum %>g
          </li>
        </ul>

      </div>
    </div>

    <% entries.each do |entry| %>
      <div id="entries" class="col d-flex justify-content-center">
        <div>
          <%= render entry %>
          <div class="form-group mb-3">
            <%= link_to "Show this entry", entry, class: "btn btn-primary mb-3" %>
          </div>
          
        </div>
      </div>
    <% end %>
    
  <% end %>
</div>



