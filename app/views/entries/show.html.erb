<div class="row d-flex justify-content-center text-center">
  <div class="col-12 mb-3">
    <%# if notice is not nil display notice %>
    <% if notice.nil? %>
    <% else %>
      <div class='notice'><%= notice %></div>
    <% end %>
  </div>
  <div class="col-6">
    <%= render @entry %>

    <div class="d-flex justify-content-center">
      <%= link_to "Edit this entry", edit_entry_path(@entry), class: "btn btn-primary mx-1" %>
      <%= link_to "Back to entries", entries_path, class: "btn btn-primary mx-1" %>
      <%= button_to "Destroy this entry", @entry, method: :delete, class: "btn btn-danger mx-1" %>
    </div>
  </div>
</div>
