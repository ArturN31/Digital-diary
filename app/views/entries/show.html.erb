<div class="row d-flex justify-content-center text-center">
  <h1 class="text-white my-4 text-center">Showing entry</h1>
  <div class="col-12 col-md-6 col-lg-4">
    <%= render @entry %>
  </div>
  <div class="form-group mt-4">
    <%= link_to "Edit this entry", edit_entry_path(@entry), class: "btn-spread m-1" %>
    <%= link_to "Back to entries", entries_path, class: "btn-spread m-1" %>
    <%= button_to raw("
      <div class='row d-flex align-items-center' style='padding: 0px 7px'>
        <div class='col-xs-12 col-sm-4 btn-icon'>
          <i class='bi bi-trash'></i>
        </div>
        <div class='col-xs-12 col-sm-8' style='padding: 14px 10px'>
          Remove
        </div>
      </div>
    "), 
    @entry, method: :delete, data: {confirm: "Are you sure?"}, class: "btn-remove m-1 btn-remove-bg" %>
  </div>
</div>
