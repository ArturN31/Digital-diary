<%= form_with(model: user_profile, html: { class: "custom-form" }) do |form| %>
  <% if user_profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user_profile.errors.count, "error") %> prohibited this user_profile from being saved:</h2>

      <ul>
        <% user_profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :user_weight, "Weight (in kg):", style: "display: block", class: "text-white" %>
    <%= form.number_field :user_weight, class: "form-control", min: 1, :required => 'required' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :user_height, "Height (in cm):", style: "display: block", class: "text-white" %>
    <%= form.number_field :user_height, class: "form-control", min: 1, :required => 'required' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :user_age, "Age:", style: "display: block", class: "text-white" %>
    <%= form.number_field :user_age, class: "form-control", min: 1, :required => 'required' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :user_gender, "Gender:", style: "display: block", class: "text-white" %>
    <div>
      <%= form.radio_button :user_gender, 'Male', class: "form-check-input", checked: true %> <span class="text-white">Male</span>
    </div>
    <div>
      <%= form.radio_button :user_gender, 'Female', class: "form-check-input" %> <span class="text-white">Female</span>
    </div>
  </div>

  <div class="form-group mb-3">
    <%= form.label :user_pal_value, 'Activity level:', style: "display: block", class: "text-white" %>
    <%= form.select :user_pal_value, ['Sedentary or inactive (<5000 steps)', 'Low active (5000-7499 steps)', 'Somewhat active (7500-9999 steps)', 'Active (10,000-12,500 steps)', 'Highly Active (>12,500 steps)'], {}, class: "form-select" %>
  </div>

  <%# DISPLAYS DIFFERENT BUTTON ON USER PROFILE EDIT PAGE %>
  <% if params[:controller] == 'user_profiles' && params[:action] == 'edit' %>
    <div class="form-group d-flex justify-content-center">
      <%= form.button :submit, class: "btn-remove m-1 btn-submit" do %>
        <div class='row d-flex align-items-center' style='padding: 0px 7px'>
          <div class='col-xs-12 col-sm-4 btn-icon'>
            <i class='bi bi-arrow-repeat'></i>
          </div>
          <div class='col-xs-12 col-sm-8'>
            Update
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <%# DISPLAYS DIFFERENT BUTTON ON USER SIGN UP PAGE %>
  <% if params[:controller] == 'user_profiles' && params[:action] == 'new' %>
    <div class="form-group d-flex justify-content-center">
      <%= form.button :submit, class: "btn-remove m-1 btn-submit" do %>
        <div class='row d-flex align-items-center' style='padding: 0px 7px'>
          <div class='col-xs-12 col-sm-4 btn-icon'>
            <i class='bi bi-plus-lg'></i>
          </div>
          <div class='col-xs-12 col-sm-8'>
            Add
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>