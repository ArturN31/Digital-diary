<div class="row d-flex justify-content-center text-center">
  <div class="col-12 col-md-6 col-lg-4 col-xl-3">
    <%= link_to "Change password", change_password_path, class: "btn-spread m-1" %>
    <h1 class="text-white my-4">User profile</h1>

    <div id="user_profiles" class="custom-shadow">
      <% @user_profiles.each do |user_profile| %>
        <%= render user_profile %>
      <% end %>
    </div>
    <div class="form-group mb-3 mt-4">
      <% if !@user_profiles.empty? %>
        <%= link_to "Edit this user profile", edit_user_profile_path(user_profile), class: "btn-spread m-1" %>
        <%= button_to raw("
          <div class='row d-flex align-items-center' style='padding: 0px 7px'>
            <div class='col-xs-12 col-sm-4 btn-icon'>
              <i class='bi bi-trash'></i>
            </div>
            <div class='col-xs-12 col-sm-8' style='padding: 14px 10px'>
              Remove
            </div>
          </div>
        "), 
        user_profile, method: :delete, data: {confirm: "Are you sure?"}, class: "btn-remove m-1 btn-remove-bg" %>
      <% end %>
    </div>

    <% if @user_profiles.empty? %>
      <%= link_to "New user profile", new_user_profile_path, class: "btn-spread m-1" %>
    <% end %>
  </div>
</div>